local API_DIR = "/api";
local AUTORUN_DIR = "/autorun"
local HOME = "/home"

-- Load APIs
for _, file in pairs(fs.list(API_DIR)) do
	os.loadAPI(API_DIR.. "/" ..file);
end

-- Run Autorun scripts
for _, file in pairs(fs.list(AUTORUN_DIR)) do
	shell.run(AUTORUN_DIR .. "/" .. file)
end

-- Set starting directory to /prog
shell.run("cd " .. HOME);
